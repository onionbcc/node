<% include ./header %>

    <ol class="breadcrumb">
        <li>
            <a href="#">友链管理</a>
        </li>
        <li class="active">添加友链</li>
    </ol>

    <table class="table table-hover">
        <tr>
            <td>排序</td>
            <td>友链名称</td>
            <td>友链地址</td>
            <td>创建时间</td>
            <td>操作</td>
        </tr>
        <% data.forEach(function(val){ %>
            <tr>
                <td>
                     <%= val.order %>
                 </td>
                <td>
                    <%= val.name %>
                </td>
                <td>
                    <%= val.info %>
                </td>
                <td>
                    <%= val.ctime.toLocaleString() %>
                </td>
                <td>
                    <a href="/admin/linkEdit/<%= val._id %>"> 编辑</a>
                    |
                    <a href="/admin/linkRemove/<%= val._id %>" onclick="return confirm('您确定要删除吗?')"> 删除</a>
                </td>
            </tr>
            <% }) %>
    </table>
    


    <% include ./footer %>